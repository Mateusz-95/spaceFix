---
import data from '../../../../data/data';
import Layout from '../../../../layouts/Layout.astro';
import TextCardGrid from '../../../../templates/text-card-grid';

export function getStaticPaths() {
  const base = '/naprawa-po-zalaniu/';
  return data
    .filter((item) => item.categories)
    .map(({ slug, categories }) =>
      categories
        .filter((category) => category.ignore !== 'pages')
        .map((category) => ({
          params: { brand: slug.slice(0, slug.length - 1), category: category.slug.slice(0, category.slug.length - 1) },
          props: {
            models: category.phones.map((phone) => ({ name: phone.name, slug: `${base}${slug}${category.slug}${phone.slug}` })),
            name: category.name,
          },
        }))
    )
    .flat();
}

const { models, name } = Astro.props;
---

<Layout title={name}>
  <TextCardGrid headerContent="Wybierz model" data={models} />
</Layout>
