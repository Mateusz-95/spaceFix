---
import data from '../../../data/data';
import Layout from '../../../layouts/Layout.astro';
import RepairInfo from '../../../templates/repair-info';

export function getStaticPaths() {
  return data
    .filter((item) => item.phones)
    .map(({ slug, phones }) =>
      phones.map((phone) => ({
        params: { brand: slug.slice(0, slug.length - 1), phone: phone.slug.slice(0, phone.slug.length - 1) },
        props: { data: phone.repairs, name: phone.name },
      }))
    )
    .flat();
}
const { data, name } = Astro.props;
---

<Layout title={name}>
  <RepairInfo data={data} client:load />
</Layout>
