---
import Layout from '../layouts/Layout.astro';
import ImageCardGrid from '../templates/image-card-grid';
import data from '../data/data';
import GlassReplacementTop from '../components/GlassReplacementTop/GlassReplacementTop.astro';
import GlassReplacementInfo from '../components/GlassReplacementInfo/GlassReplacementInfo.astro';
import GlassReplacementSteps from '../components/GlassReplacementSteps/GlassReplacementSteps.astro';

// Map the data to update slugs to point to wymiana-szybki routes
const wymianaSzybkiData = data.map((item) => ({
  ...item,
  slug: `/wymiana-szybki/${item.slug}`,
}));
---

<Layout title="Wymiana szyby">
  <GlassReplacementTop />
  <ImageCardGrid data={wymianaSzybkiData as any} headerContent="Wybierz swoje urzÄ…dzenie" client:load />
  <GlassReplacementInfo />
  <GlassReplacementSteps />
</Layout>

