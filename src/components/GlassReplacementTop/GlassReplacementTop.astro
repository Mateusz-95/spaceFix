        </div>
      </div>
    </div>
  </div>
</section>

<script>
  let ticking = false;

  function updateCrackedOverlay() {
    const overlay = document.getElementById('cracked-overlay');
    const phoneContainer = document.getElementById('phone-container');
    if (!overlay || !phoneContainer) return;

    // Detect mobile device
    const isMobile = window.innerWidth < 1024;
    

    const rect = phoneContainer.getBoundingClientRect();
    const windowHeight = window.innerHeight;
    
    const startOffset = isMobile ? windowHeight * 0.5 : windowHeight * 0.8;
    const endOffset = isMobile ? windowHeight * 0.1 : windowHeight * 0.2; 

    const distance = startOffset - endOffset;
    const currentPosition = rect.top;
    
    let scrollProgress = 0;
    if (currentPosition <= endOffset) {
      scrollProgress = 1; // Animation complete
    } else if (currentPosition < startOffset) {
      scrollProgress = 1 - ((currentPosition - endOffset) / distance);
    } else {
      scrollProgress = 0; // Animation not started
    }
    
    // Clamp between 0 and 1
    scrollProgress = Math.min(Math.max(scrollProgress, 0), 1);
    
    const slidePercentage = scrollProgress * 100;
    
    overlay.style.clipPath = `inset(0 0 0 ${slidePercentage}%)`;
    
    ticking = false;
  }

  function onScroll() {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateCrackedOverlay();
      });
      ticking = true;
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateCrackedOverlay);
  } else {
    updateCrackedOverlay();
  }
  
  // Update on scroll
  window.addEventListener('scroll', onScroll, { passive: true });
  
  // Also update on resize to handle orientation changes
  window.addEventListener('resize', updateCrackedOverlay, { passive: true });
</script>
