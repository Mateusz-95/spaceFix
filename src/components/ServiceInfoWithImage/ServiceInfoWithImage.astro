---
interface Props {
  title: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, imageSrc, imageAlt } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-14 items-start">
      <!-- Block 1: Text (row 1 / col 1) -->
      <div class="max-w-2xl">
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-900">{title}</h2>
        <div class="mt-5 space-y-4 text-base md:text-lg leading-relaxed text-gray-700">
          <slot name="firstBlock" />
        </div>
      </div>

      <!-- Block 2: Image (row 1 / col 2) -->
      <div class="max-w-2xl">
        <div class="relative rounded-xl overflow-hidden shadow-lg min-h-[320px] md:min-h-[360px]">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="absolute inset-0 w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Block 3: Text (row 2 / col 1) -->
      <div class="max-w-2xl">
        <div class="text-base md:text-lg leading-relaxed text-gray-700">
          <slot name="thirdBlock" />
        </div>
      </div>

      <!-- Block 4: Text (row 2 / col 2) -->
      <div class="max-w-2xl">
        <div class="text-base md:text-lg leading-relaxed text-gray-700">
          <slot name="fourthBlock" />
        </div>
      </div>
    </div>
  </div>
</section>
