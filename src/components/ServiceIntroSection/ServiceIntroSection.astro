---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-gray-900 mb-6">
      {title}
    </h2>
    <div class="space-y-4 text-base md:text-lg leading-relaxed text-gray-700">
      <slot />
    </div>
    <div class="flex flex-col sm:flex-row gap-4 mt-8">
      <a
        href="https://maps.app.goo.gl/XFepeV89HQe8BKV67"
        class="inline-flex items-center justify-center px-6 py-3 border-2 border-gray-900 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-50 transition-colors"
      >
        <img src="/images/visit-us.png" alt="Odwiedź nas" class="w-5 h-5 mr-2" />
        Odwiedź nas!
      </a>
      <a
        href="tel:730889759"
        class="inline-flex items-center justify-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors"
      >
        Wycena lub Pytania
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </a>
    </div>
  </div>
</section>
